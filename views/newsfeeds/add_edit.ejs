<%- include('../partials/header')%>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <% for(var i in messages) { %>
                <div class="flash"><%= messages[i] %></div>
            <% } %>
            <form class="form" method="POST">
                <label for="NameTextField">Subject</label>
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= item._id %>"
                    >
                    <input type="text" class="form-control"
                        id="itemSubjectField"
                        placeholder="Enter the Subject"
                        name="subject" 
                        value="<%= item.subject %>"
                        required
                    >
                </div>
                <br />
                <label for="NumberTextField">Content</label>
                <div class="form-group">
                    
                    <textarea type="textarea" class="form-control"
                    id="itemTextField"
                    placeholder="Enter the news"
                    name="text" 
                    value="<%= item.text %>"
                    required
                    ></textarea>
                </div>
                <br />

                <button class="btn btn-primary" type="submit">
                    <i class="fa fa-edit"></i> 
                    Submit
                </button>
                
                <a href="/newsfeeds/list" class="btn btn-warning">
                    <i class="fa fa-undo"></i> 
                    Cancel
                </a>

            </form>
        </div>

    </div>
</div>

<%- include('../partials/footer')%>